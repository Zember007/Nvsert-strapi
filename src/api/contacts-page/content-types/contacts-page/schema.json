    "title": {
      "type": "string",
      "required": true
    },
    "intro": {
      "type": "richtext",
      "required": true
    },
    "offices": {
      "type": "component",
      "repeatable": true,
      "component": "contacts.office"
    },
    "connectSection": {
      "type": "component",
      "repeatable": false,
      "component": "contacts.connect-section",
      "required": true
    },
    "requisitesSection": {
      "type": "component",
      "repeatable": false,
      "component": "contacts.requisites-section",
      "required": true
    },
    "seo": {
      "type": "component",
      "repeatable": false,
      "component": "shared.seo"
    }
  }
}

