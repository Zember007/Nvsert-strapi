{
  "collectionName": "components_shared_content_blocks",
  "info": {
    "displayName": "Content Block",
    "icon": "layer-group",
    "description": "Flexible content block with headings, text, and images"
  },
  "options": {},
  "attributes": {
    "heading": {
      "type": "string"
    },
    "headingLevel": {
      "type": "enumeration",
      "enum": ["h1", "h2", "h3", "h4", "h5", "h6"],
      "default": "h2"
    },
    "blockType": {
      "type": "enumeration",
      "enum": ["paragraph", "image", "rich-text"],
      "required": true,
      "default": "paragraph"
    },
    "text": {
      "type": "text"
    },
    "richText": {
      "type": "richtext"
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "imageCaption": {
      "type": "string"
    },
    "order": {
      "type": "integer",
      "default": 0
    }
  }
}
